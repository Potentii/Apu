{
  "name": "apu",
  "version": "1.0.0",
  "description": "A simple message queue client",
  "scripts": {
    "serve": "parcel index.html --out-dir ./parcel-serve --target browser --no-autoinstall",
    "build": "parcel build index.html --out-dir ./parcel-build --out-file index.html --public-url ./ --target browser --no-cache",

    "electron": "electron ./infra/electron.js",

    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.potentii.apu",
    "productName": "Apu",
    "directories": {
      "output": "dist"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Potentii/Apu.git"
  },
  "keywords": [],
  "author": "Guilherme Reginaldo Ruella <potentii@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Potentii/Apu/issues"
  },
  "homepage": "https://github.com/Potentii/Apu#readme",
  "dependencies": {
    "electron": "2.0.3",
    "electron-localshortcut": "3.1.0",
    "ipc-bridge-nodejs": "1.0.0",
    "vue": "2.5.16",
    "vue-material": "1.0.0-beta-10.2",
    "vue-router": "3.0.1",
    "vuex": "3.0.1"
  },
  "devDependencies": {
    "@vue/component-compiler-utils": "1.2.1",
    "babel-plugin-transform-object-rest-spread": "6.26.0",
    "babel-plugin-transform-runtime": "6.23.0",
    "electron-builder": "20.19.2",
    "parcel-bundler": "1.9.4",
    "vue-hot-reload-api": "2.3.0",
    "vue-template-compiler": "2.5.16"
  }
}
